<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:id="@+id/help"
        android:background="@drawable/rushelp">
    <ScrollView
            android:layout_width="450dp"
            android:layout_height="650dp" android:layout_centerVertical="true" android:layout_centerHorizontal="true">
        <HorizontalScrollView
                android:layout_width="450dp"
                android:layout_height="650dp"
                android:foregroundGravity="center"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:foregroundGravity="center">
                <TextView
                        android:layout_width="450dp"
                        android:layout_height="650dp"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        android:gravity="center|top"
                        android:layout_gravity="center"
                        android:text="@string/hpage1"/>
                <TextView
                        android:layout_width="450dp"
                        android:layout_height="650dp"
                        android:textSize="38sp"
                        android:textStyle="bold"
                        android:gravity="center|top"
                        android:layout_gravity="center"
                        android:text="@string/hpage2"
                        android:id="@+id/page2"/>
                <TextView
                        android:layout_width="450dp"
                        android:layout_height="650dp"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:gravity="center|top"
                        android:layout_gravity="center"
                        android:text="@string/hpage3"
                        android:id="@+id/page3"/>
                <TextView
                        android:layout_width="450dp"
                        android:layout_height="650dp"
                        android:textSize="33sp"
                        android:textStyle="bold"
                        android:gravity="center|top"
                        android:layout_gravity="center"
                        android:text="@string/hpage4"
                        android:id="@+id/page4"/>
                <TextView
                        android:layout_width="450dp"
                        android:layout_height="650dp"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:gravity="center|top"
                        android:layout_gravity="center"
                        android:text="@string/hpage5"
                        android:id="@+id/page5"/>
                <TextView
                        android:layout_width="450dp"
                        android:layout_height="650dp"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:gravity="center|top"
                        android:layout_gravity="center"
                        android:text="@string/hpage6"
                        android:id="@+id/page6"/>
                <TextView
                        android:layout_width="450dp"
                        android:layout_height="650dp"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:gravity="center|top"
                        android:layout_gravity="center"
                        android:text="@string/hpage7"
                        android:id="@+id/page7"/>
                <TextView
                        android:layout_width="450dp"
                        android:layout_height="650dp"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:gravity="center|top"
                        android:layout_gravity="center"
                        android:text="@string/hpage8"
                        android:id="@+id/page8"/>
                <TextView
                        android:layout_width="450dp"
                        android:layout_height="650dp"
                        android:textSize="33sp"
                        android:textStyle="bold"
                        android:gravity="center|top"
                        android:layout_gravity="center"
                        android:text="@string/hpage9"
                        android:id="@+id/page9"/>
            </LinearLayout>

        </HorizontalScrollView>
    </ScrollView>



</RelativeLayout>