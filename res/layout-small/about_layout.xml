<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:background="@drawable/rushelp"
                android:id="@+id/about"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView2"
            android:src="@drawable/imgfgpcircle"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_name"
            android:id="@+id/nameimgfgp" android:layout_below="@+id/imageView2" android:layout_centerHorizontal="true"
            android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/version"
            android:id="@+id/textversion"
            android:textColor="#363636"
            android:layout_below="@+id/nameimgfgp" android:layout_centerHorizontal="true" android:textSize="15sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/ofsite"
            android:id="@+id/textsite"
            android:layout_below="@+id/textversion" android:layout_centerHorizontal="true" android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/siteadress"
            android:id="@+id/textsiteadress"
            android:autoLink="web"
            android:linksClickable="true"
            android:textColorLink="#EE2C2C"
            android:layout_below="@+id/textsite" android:layout_centerHorizontal="true" android:textSize="16sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/myachivs"
            android:id="@+id/textauthor"
            android:textSize="18sp" android:layout_above="@+id/textView" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/me"
            android:id="@+id/textView"
            android:textStyle="italic"
            android:textColor="#363636"
            android:textSize="17sp" android:layout_centerVertical="true" android:layout_alignRight="@+id/textsite"
            android:layout_alignEnd="@+id/textsite"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tanya"
                android:id="@+id/tanya"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_above="@+id/bell" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/tanyaadress"
                android:autoLink="web"
                android:linksClickable="true"
                android:textColorLink="#EE2C2C"
                android:id="@+id/bell"
                android:textStyle="italic"
                android:textColor="#363636"
                android:textSize="17sp"
                android:layout_above="@+id/textlida" android:layout_centerHorizontal="true"
                android:layout_marginBottom="17dp"/>
    <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lida"
            android:id="@+id/textlida"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_above="@+id/textlink" android:layout_centerHorizontal="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/lidaadress"
            android:id="@+id/textlink"
            android:autoLink="web"
            android:linksClickable="true"
            android:textColorLink="#EE2C2C"
            android:layout_marginBottom="16dp" android:textSize="16sp" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
