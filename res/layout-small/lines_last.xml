<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:background="@drawable/background_bb" android:id="@+id/bb_last">

  <com.katesproject.stinkie.LinesView
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:id="@+id/linesgame"
            android:visibility="invisible"
            android:layout_gravity="center_horizontal|top" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <ImageView
            android:id="@+id/win1"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/win1" android:visibility="visible"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/gettedscores"
            android:src="@drawable/scoresgettedimg"
            android:visibility="visible"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"/>
    <ImageView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:id="@+id/recordscores"
            android:src="@drawable/scorerecordimg"
            android:visibility="visible"
            android:layout_below="@+id/gettedscores" android:layout_centerHorizontal="true"/>

    <Button
            android:id="@+id/backlines"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:onClick="backgame"
            android:background="@drawable/backlines"
            android:visibility="visible"
            android:layout_below="@+id/recordscores" android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"/>


    <TextView
            android:id="@+id/scoreView"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="0"
            android:textStyle="italic"
            android:textColor="#66CDAA"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="visible"
            android:layout_alignBottom="@+id/gettedscores" android:layout_alignRight="@+id/gettedscores"
            android:layout_alignEnd="@+id/gettedscores" android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp" android:layout_marginBottom="20dp"/>
    <TextView
            android:id="@+id/scoreRView"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="0"
            android:textStyle="italic"
            android:textColor="#20B2AA"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="visible"
            android:layout_below="@+id/gettedscores" android:layout_alignLeft="@+id/scoreView"
            android:layout_alignStart="@+id/scoreView" android:layout_marginTop="22dp"/>

</RelativeLayout>