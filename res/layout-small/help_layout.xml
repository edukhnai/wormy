<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:id="@+id/help"
        android:background="@drawable/rushelp">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="270dp"
                android:layout_height="400dp" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" android:id="@+id/scrollView">
    </ScrollView>
    <HorizontalScrollView
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:foregroundGravity="center"
            android:layout_alignTop="@+id/scrollView" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foregroundGravity="center">


     <TextView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:textSize="27sp"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    android:text="@string/hpage1"
                    android:id="@+id/page1"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:textSize="22sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    android:text="@string/hpage2"
                    android:id="@+id/page2"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:textSize="19sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    android:text="@string/hpage3"
                    android:id="@+id/page3"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:textSize="20sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    android:text="@string/hpage4"
                    android:id="@+id/page4"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:textSize="29sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    android:text="@string/hpage5"
                   android:id="@+id/page5"/>
             <TextView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:textSize="28sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    android:text="@string/hpage6"
                    android:id="@+id/page6"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:textSize="21sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    android:text="@string/hpage7"
                    android:id="@+id/page7"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:textSize="19sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    android:text="@string/hpage8"
                    android:id="@+id/page8"/>
            <TextView
                    android:layout_width="300dp"
                    android:layout_height="400dp"
                    android:textSize="20sp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textStyle="bold"
                    android:gravity="center|top"
                    android:layout_gravity="center"
                    android:text="@string/hpage9"
                    android:id="@+id/page9"/>
        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>