<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:id="@+id/moneyind"
            android:src="@drawable/moneyind"

            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"/>
    <TextView
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/moneyview"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/moneyind" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginBottom="10dp"
            android:layout_alignRight="@+id/moneyind" android:layout_alignEnd="@+id/moneyind"/>
</RelativeLayout>